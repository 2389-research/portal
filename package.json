{
  "name": "webrtc-video-chat",
  "version": "1.0.0",
  "description": "WebRTC Video Chat Application",
  "source": [
    "src/html/index.html",
    "src/html/room.html"
  ],
  "scripts": {
    "start": "parcel serve src/html/*.html --dist-dir public --no-hmr",
    "build": "parcel build src/html/*.html --dist-dir public",
    "clean": "rm -rf public/* .parcel-cache",
    "test": "npm run test:lint && npm run test:backend && npm run test:frontend",
    "test:lint": "npx @biomejs/biome lint ./src && python -m ruff check .",
    "test:backend": "python -m pytest tests/backend",
    "test:backend:single": "python -m pytest",
    "test:frontend": "jest --config tests/frontend/jest.config.js",
    "test:frontend:single": "jest --config tests/frontend/jest.config.js",
    "test:e2e": "playwright test --config tests/e2e/playwright.config.js",
    "test:coverage": "jest --config tests/frontend/jest.config.js --coverage && python -m pytest tests/backend --cov=server",
    "format": "npx @biomejs/biome format --write ./src && python -m ruff format .",
    "lint:fix": "npx @biomejs/biome lint --apply ./src && python -m ruff check --fix ."
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@biomejs/biome": "1.9.4",
    "@parcel/babel-preset-env": "^2.13.3",
    "@playwright/test": "^1.51.0",
    "autoprefixer": "^10.4.20",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "parcel": "^2.13.3",
    "parcel-reporter-static-files-copy": "^1.5.3",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.12"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "dependencies": {
    "@tailwindcss/postcss": "^4.0.12",
    "pocketbase": "^0.21.1"
  }
}
